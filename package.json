{
  "name": "swc-template-react-simple",
  "version": "2.0.1",
  "description": "A @d-leb/swc-webpack template for a simple ReactJS project with various basic libraries and tools pre-configured",
  "author": "David LeBlanc <github@david-leblanc.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-leb/swc-template-react-simple.git"
  },
  "packageManager": "yarn@3.3.1",
  "scripts": {
    "analyze": "swc-webpack analyze",
    "build": "swc-webpack build",
    "defaults": "swc-webpack defaults",
    "eslint": "eslint --ext ts,tsx src --max-warnings=0",
    "eslint:fix": "eslint --ext ts,tsx src --fix",
    "lint": "yarn eslint && yarn stylelint && yarn prettier",
    "prettier": "prettier --check 'src/**/*.{ts,tsx,js,jsx}'",
    "prettier:fix": "prettier --write 'src/**/*.{ts,tsx,js,jsx}'",
    "review": "yarn lint && yarn test && yarn build",
    "start": "swc-webpack start",
    "stylelint": "stylelint \"src/**/*.ts?\"",
    "stylelint:fix": "stylelint \"src/**/*.ts?\" --fix",
    "test": "yarn tsc",
    "tsc": "tsc"
  },
  "dependencies": {
    "@axe-core/react": "^4.5.2",
    "@tanstack/react-query": "^4.20.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^1.3.0",
    "react-intl": "^6.2.5",
    "react-is": "^18.2.0",
    "react-responsive": "^9.0.2",
    "react-router-dom": "^6.6.1",
    "styled-components": "^5.3.6",
    "web-vitals": "^3.1.0"
  },
  "devDependencies": {
    "@d-leb/swc-webpack": "^1.0.1",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.20",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.8.1",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recommended-scss": "^8.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "typescript": "^4.9.4"
  }
}
